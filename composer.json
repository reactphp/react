{
    "minimum-stability": "dev",
    "name": "react/react",
    "description": "Nuclear Reactor written in PHP.",
    "keywords": ["event-loop", "reactor"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/react-php/react/issues",
        "irc": "irc://irc.freenode.org/reactphp"
    },
    "require": {
        "php": ">=5.3.2",
        "evenement/evenement": "1.0.*",
        "guzzle/guzzle": "2.5.*",
        "silex/silex": "1.0.*"
    },
    "replace": {
        "react/event-loop": "self.version",
        "react/stream": "self.version",
        "react/socket": "self.version",
        "react/http": "self.version",
        "react/espresso": "self.version"
    },
    "autoload": {
        "psr-0": { "React": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.0"
        }
    }
}
